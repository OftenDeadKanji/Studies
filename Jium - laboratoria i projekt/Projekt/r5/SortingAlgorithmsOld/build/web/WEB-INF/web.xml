<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>CreateSortTable</servlet-name>
        <servlet-class>pl.polsl.lab.servlets.CreateSortTable</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListSortingTables</servlet-name>
        <servlet-class>pl.polsl.lab.servlets.ListSortingTables</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateSortTable</servlet-name>
        <url-pattern>/CreateSortTable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListSortingTables</servlet-name>
        <url-pattern>/ListSortingTables</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
